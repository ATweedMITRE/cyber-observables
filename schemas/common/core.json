{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "core",
  "description": "Common properties and behavior across all Cyber Observable Objects.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^\\-?[a-zA-Z0-9]+(-[a-zA-Z0-9]+)*\\-?$",
      "minLength": 3,
      "maxLength": 250,
      "description": "Indicates that this object is an Observable Object.",
      "not": {
        "enum": [
          "action"
        ]
      }
    },
    "description": {
      "type": "string",
      "description": "Specifies a textual description of the Object."
    },
    "extended_properties": {
      "$ref": "../common/dictionary.json",
      "description": "Specifies any extended properties of the object, as a dictionary."
    }
  },
  "patternProperties": {
    "^[a-z0-9_]{3,250}$": {
      "anyOf": [
        {
          "type": "array",
          "minItems": 1
        },
        {
          "type": "string"
        },
        {
          "type": "integer"
        },
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "object"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "type"
  ]
}
